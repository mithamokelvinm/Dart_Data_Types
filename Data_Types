// This program demonstrates basic data types in Dart

void main() {
  // Integer (int) to store whole numbers
  int age = 30;
  print("My age is $age"); // String interpolation for clear output

  // Double (double) to store numbers with decimals
  double pi = 3.14159;
  print("The value of pi is $pi");

  // String (String) to store text
  String name = "Alice";
  print("My name is $name");

  // List (List) to store collections of items (ordered)
  List<String> colors = ["red", "green", "blue"];
  print("My favorite colors are: $colors");

  // Map (Map) to store key-value pairs
  Map<String, String> fruits = {
    "apple": "red",
    "banana": "yellow",
  };
  print("The color of an apple is ${fruits["apple"]}"); // Accessing value by key
}
